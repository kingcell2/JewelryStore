<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.UserActivity">

    <TextView
        android:id="@+id/textView34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Thông tin người dùng" />

    <TextView
        android:id="@+id/tvInfoUser"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:text=""
        android:textSize="25sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <Button
        android:id="@+id/btnChangeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#94CBF6"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Thay đổi thông tin" />

    <Button
        android:id="@+id/btnSingout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="#94CBF6"
        android:layout_marginTop="50dp"
        android:text="Đăng xuất tài khoản" />
</LinearLayout>

    <Button
        android:id="@+id/buttonDoiMK"
        android:layout_marginTop="10dp"
        android:background="#94CBF6"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu" />
</LinearLayout>